<a href="/">Home</a>

<section id="show-page">
    <ul>
        <li>Airline: <%= flight.airline %></li>
        <li>Airport: <%= flight.airport %></li>
        <li>Flight: <%= flight.flightNo %></li>
        <li>Departs: <%= flight.departs %></li>
        
    </ul>
</section>
<br><br>

<form method="POST" action="/flights/<%= flight._id %>/destinations">
    <select name="" id="">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
    <input type="date">
    <input type="submit">
</form>

<% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(r) { %>
          <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.airport %></td>
            <td><%= r.arrival %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Destinations Yet</h5>
  <% } %>